<style>
  .image-banner {
    width: 100%
  }
  .iamge-banner img {
    width: 100%;
    height: 650px;
    object-fit: cover;
  }
  .image-banner .image-wrap {
    position: relative;
  }
  .image-banner .link-button {
    width: 280px;
    height: 48px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #364780;
    color: white;
    font-family: Cera Pro;
    font-weight: 500;
    font-size: 14px;
    line-height: 1.2;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 100px;
  }
  .image-banner .iamge-banner .content-wrap {
    height: 360px;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #FFF3E9;
    font-family: 'Cera Pro';
    font-weight: 500;
    font-size: 33px;
    line-height: 1.25;
    color: #D76026;
  }
  @media(max-width: 768px) {
    .image-banner .link-button {
      width: 130px;
      height: 30px;
      font-size: 9px;
      bottom: 20px;
    }
  }
</style>
<div id="{{ section.id }}" class="image-banner">
  <div class="image-wrap">
    <img src="{{ section.settings.image | img_url: '3000x'}}" alt="">
    {% if section.settings.link_text != blank %}
      <a class="link-button" href="{{ section.settings.url }}">
        {{ section.settings.link_text }}
      </a>
    {% endif %}
  </div>
</div>


{% schema %}
  {
    "name": "Image banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }, {
        "type": "url",
        "id": "url",
        "label": "URL"
      }, {
        "type": "text",
        "id": "link_text",
        "label": "Link Text",
        "default": "Your Link Text"
      }
    ],
    "presets": [
      {
        "name": "Image Bannder"
      }
    ]
  }
{% endschema %}