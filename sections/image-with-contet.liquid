<style>
  .image-with-text {
    font-family: 'Cera Pro';
    line-height: 1.25;
    padding: 80px 0;
    max-width: 1028px;
    margin: auto;
  }
  .image-content-wrap {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .image-content-wrap.reverse {
    flex-direction: row-reverse;
  }
  .image-with-text .title {
    font-weight: 700;
    font-size: 50px;
    text-align: center;
    color: #D76026;
    padding-bottom: 64px;
  }
  .image-with-text img {
    width: 50%;
    aspect-ratio: 1 / 1;
    object-fit: cover;
  }
  .image-with-text .content-wrap {
    width: 50%;
    padding-left: 64px;
  }
  .image-with-text .item-wrap:not(:last-child) {
    padding-bottom: 48px;
  }
  .image-with-text .item-title {
    padding-bottom: 12px;
    font-weight: 700;
    font-size: 24px;
    color: #D76026;
  }
  .image-with-text .item-desc {
    font-style: normal;
    font-size: 18px;
    color: #000000;
  }
  @media(max-width: 768px) {
    .image-with-text {
      padding: 30px 0;
    }
    .image-with-text .title {
      font-size: 30px;
      padding-bottom: 30px;
    }
    .image-with-text .image-content-wrap {
      flex-direction: column;
    }
    .image-with-text img {
      width: 90%;
    }
    .image-with-text .content-wrap {
      padding: 30px 0;
      width: 90%;
    }
    .image-with-text .item-wrap:not(:last-child) {
      padding-bottom: 25px;
    }
  }
</style>

<section class="image-with-text ">
  <div class="title">
    {{ section.settings.title }}
  </div>
  <div class="image-content-wrap {% if section.settings.image_pos %} reverse {%endif%}">
    <img
      src="{{ section.settings.image | img_url:"2000x"}}"
      width
      height
      loading="lazy"
      alt="">
    <div class="content-wrap">
      {% for block in section.blocks %}
        <div class="item-wrap">
          <div class="item-title">
            {{ block.settings.title }}
          </div>
          <div class="item-desc">
            {{ block.settings.desc }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Image with text",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }, {
        "type": "checkbox",
        "id": "image_pos",
        "label": "Image Position"
      }, {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Rewards, Coming Soon!"
      }
    ],
    "blocks": [
      {
        "type": "text_block",
        "name": "Text Block",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "We are a modern dental salon"
          }, {
            "type": "text",
            "id": "desc",
            "label": "Description",
            "default": "Weâ€™re redefining routine dental by putting hospitality and service at the forefront of preventative dental care."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image with text"
      }
    ]
  }
{% endschema %}